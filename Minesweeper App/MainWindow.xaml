        <StackPanel Orientation="Horizontal">
            <Button Content="Start" FontSize ="50" Click="Start_Click" Background="MediumPurple" Width="150"/>
            <Button Content="Restart" FontSize ="50" Click="Restart_Click" Background="Lavender" Width="175"/>
            <StackPanel>
                <Label Content="Click once to flag/unflag a cell" FontSize="25" HorizontalContentAlignment="Center" Width="375" />
                <Label Content="Double click to look at a cell" FontSize="25" HorizontalContentAlignment="Center" Width="375" />
            </StackPanel>
        </StackPanel>

